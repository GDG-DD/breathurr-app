---
import { Container } from './container';
---

<Container>
  <section class="hero">
    <img
      alt="Breathurr Logo"
      class="logo"
      height="36"
      src="/logo.svg"
      width="36"
    />
    <h1 class="title">Breathurr</h1>
    <p class="desc">Breathing Exercises for the Complex ADHD mind</p>
  </section>
</Container>

<style>
  .hero {
    padding: 100px 0 30px;

    .logo {
      display: block;
      width: 36px;
      height: 36px;
      margin-bottom: 12px;
      opacity: 1;
      animation-name: rotate;
      animation-duration: 15s;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
    }

    & .title {
      font-family: var(--font-display);
      font-size: var(--font-xlg);
      color: var(--color-foreground);
    }

    & .desc {
      margin-top: -4px;
      line-height: 1.6;
      color: var(--color-foreground-subtle);
    }
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }

    100% {
      transform: rotate(360deg);
    }
  }
</style>
